<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:color="#000"/>
    <item  android:state_focused="false"  android:state_selected="true"  android:state_pressed="true" android:color="#ed5050"/>

    <!-- Focused -->
    <item android:state_selected="true" android:color="#ed5050"/>
    <item android:state_selected="false" android:color="#ed5050"/>

    <!-- Pressed -->
    <item android:state_pressed="true" android:state_focused="false" android:color="#ed5050"/>
    <item android:state_pressed="true"  android:state_focused="true" android:color="#ed5050"/>

</selector>